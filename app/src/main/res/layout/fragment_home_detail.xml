<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddd"
    tools:context=".HomeDetailFragment">

    <ImageView
        android:id="@+id/imageViewInfoHinhPhong"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTieuDePhong"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:ems="10"
        android:text="Tiêu Đề"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewInfoHinhPhong"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Giá:"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewGiaPhong"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTieuDePhong"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />

    <TextView
        android:id="@+id/textViewGiaPhong"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:text="TextView"
        android:textColor="#FF00BF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTieuDePhong"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />


    <TextView
        android:id="@+id/textViewDienTichPhong"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="68dp"
        android:text="TextView"
        android:textColor="#FF00BF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGiaPhong"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="102dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="Diện Tích: "
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewDienTichPhong"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />

    <TextView
        android:id="@+id/textViewDiaChiPhong"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        android:textColor="#FF00BF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDienTichPhong"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="Địa Chỉ:"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewDiaChiPhong"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />


    <TextView
        android:id="@+id/textViewMoTaPhong"
        android:layout_width="210dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        android:textColor="#FF00BF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDiaChiPhong"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="Mô tả: "
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewDiaChiPhong"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />

    <Button
        android:id="@+id/buttonSMS"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/ic_baseline_sms_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMoTaPhong"
        app:layout_constraintVertical_bias="0.287"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />

    <Button
        android:id="@+id/buttonCall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_call_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonSMS"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.474"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@+id/buttonSMS"
        app:layout_constraintTop_toBottomOf="@+id/textViewMoTaPhong"
        app:layout_constraintVertical_bias="0.287"
        tools:ignore="HardcodedText,MissingConstraints,LabelFor" />


</androidx.constraintlayout.widget.ConstraintLayout>